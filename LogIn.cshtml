<!Doctype html>
<html lang="en">
@model PureSurveyProjectTracker.Models.ViewModels.UserLoginView

@{
    ViewBag.Title = "LogIn";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="container1" id="loginpage">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 style="text-align:left; padding-left:40px; padding-top:10px; color: #569bbe">LogIn</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="color:#ffffff">
                    @Html.LabelFor(model => model.LoginName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="color:#ffffff">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-default" style="background-color:#004187">
                        <button class="btn btn-default" style="color: #ffffff; background-color: #004187; border:none; width:130px; height:40px; font-weight:bold">@Html.ActionLink("Register", "SignUp", "Account")</button>
                        @*<input type="submit" id="Registerbtn" value="Register" class="btn btn-default" style="padding-left:10px">*@
                    </div>
                </div>
            </div>
        }
        <br>
        <br>
        <br>
        <div style="text-align:left; padding-left:40px">
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


