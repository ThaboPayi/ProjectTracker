
@model PureSurveyProjectTracker.Models.ViewModels.CostModalViewModel

<form>
    <fieldset>
        <div style="text-align:center; width:100%; height:30px; background-color:#004187; color:#ffffff; padding-top:5px"><strong>Project Details</strong></div>
        <br>
        <div style="color:#004187;">
        <table>
