                <td class="viewtdPvalueDisplayfor">@Html.DisplayFor(modelItem => Model._Proj_Value)</td>
            </tr>
        </table>
        <br>
        <br>
        <div style="text-align:center">
            <input type="button" id="btnCancel2" class="btn btn-default" name="cancel2" value="EXIT" style="width:30%; text-align:center; background-color:#004187" onclick="Close()" data-dissmiss="modal" />
            @*<input type="submit" id="btnCancel2" class="btn btn-default" name="cancel2" value="CANCEL" style="width:30%; text-align:center" onclick="Cancel()" data-dissmiss="modal" />*@
