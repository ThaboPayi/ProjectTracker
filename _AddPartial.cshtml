@model PureSurveyProjectTracker.Models.ViewModels.AddModalView

<form id="AddViewPartial">
    <fieldset>
        @Html.HiddenFor(m => m._projectId)
        @Html.HiddenFor(m => m.UserId)
        <div class="addwindowheader"><strong>ADD PROJECT</strong></div>
        <br>
        <br>
        <table>
            <tr>
                <td>
                    <div class="form-group" style="color:#ffffff; padding-left:15px">
                        @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" style="padding-left:80px; width:260px">
                            @Html.EditorFor(model => Model.ProjectName, new { htmlAttributes = new { id = "txtPname", @class = "form-control", @Value = "" + Model.ProjectName + "" } })
                        </div>
                    </div>
                    <div class="addtdprojectnameerror">
                        @Html.ValidationMessageFor(model => Model.ProjectName, "", new { @class = "text-danger" })
                    </div>
                </td>
