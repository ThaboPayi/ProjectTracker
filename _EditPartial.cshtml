                            @Html.EditorFor(model => model.Project_Value, new { htmlAttributes = new { id = "txtPCostEdit", @class = "form-control", @Value = "" + Model.Project_Value + "" } })                         
                        </div>
                    </div>
                    <div style="padding-left:10px">
                        @Html.ValidationMessageFor(model => Model.Project_Value, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>
        </table>
        <br>
        <div class="modal-footer" style="text-align:center; padding-left:340px">
            <table style="text-align:center">
                <tr>
                    <td style="width:100px">
                        <input type="submit" id="btnEditProject" class="btn btn-default" name="addproject" value="SAVE" style="width:100%; background-color:#004187" onclick="SaveEditproject('@Model._projectId'); return false;" />
                    </td>
                    <td style="padding-left:20px; width:110px">
                        <input type="submit" id="btnCancel" class="btn btn-default" name="cancel" value="CANCEL" style="width:100%; background-color:#004187" onclick="CloseEdit()" data-dissmiss="modal" />
                    </td>
                </tr>
            </table>
        </div>
    </fieldset>
</form>