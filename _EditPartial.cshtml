@model PureSurveyProjectTracker.Models.ViewModels.EditModalView

<form id="EditViewPartial">
    <fieldset>
        @Html.HiddenFor(m => m._projectId)
        @Html.HiddenFor(m => m.userId)
        <div style="text-align:center; width:100%; height:30px; background-color:#004187; color:#ffffff; padding-top:5px"><strong>EDIT PROJECT</strong></div>
        <br>
        <br>
        <table>
            <tr>
                <td>
                    <div class="form-group" style="color:#ffffff; padding-left:15px">
                        @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" style="padding-left:80px; width:260px">
                            @Html.EditorFor(model => Model.ProjectName, new { htmlAttributes = new { id = "txtPnameEdit", @class = "form-control", @Value = "" + Model.ProjectName + "" } })
                        </div>
                    </div>
                    <div style="padding-left:160px">
                        @Html.ValidationMessageFor(model => Model.ProjectName, "", new { @class = "text-danger" })
                    </div>
                </td>
                <td style="vertical-align:top; padding-left:70px">
